<div class="contents">
  <div class = "contents-kid">
   <% @arts.each do |art| %>
      <div class="art-box">
        <div class="art">
        <%= link_to art_path(art.id), method: :get do%>

        <div class = "art-title">
          <%= art.title %>
        </div>

        <div class = "art-image">
            <%= image_tag art.images[0].variant(resize: '500x500'), class: 'art-image' %>
        </div>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>