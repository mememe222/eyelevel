<div class="contents">
  <div class="container">
    <h3 class="sinki">* Sign up *</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nickname %> <br />
        <%= f.text_field :nickname,class:"sign-form", autofocus: true, maxlength: "15" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email,class:"sign-form" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:"sign-form" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" ,class:"sign-form" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up",class:"send btn"  %>
      </div>
    <% end %>
  </div>
</div>